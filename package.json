{
  "name": "latin-cyrillic-switcher",
  "version": "1.0.0",
  "description": "Latin to Cyrillic text converter with hotkey support",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build:ts": "tsc",
    "build:scss": "sass src/styles.scss dist/styles.css",
    "build:copy": "cp index.html dist/index.html",
    "build": "npm run build:scss && npm run build:ts && npm run build:copy",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --inspect=5858",
    "build:app": "npm run build && electron-builder",
    "build:mac": "npm run build && electron-builder --mac",
    "build:dmg": "npm run build && electron-builder --mac dmg",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write src/**/*.ts index.html"
  },
  "build": {
    "appId": "com.latin-cyrillic.switcher",
    "productName": "Latin â†” Cyrillic",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/tray-icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "dist/",
      "assets/",
      "node_modules/"
    ]
  },
  "dependencies": {
    "electron-store": "^11.0.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "sass": "^1.94.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "author": "",
  "license": "MIT"
}